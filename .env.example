# Database
DATABASE_URL=postgresql://guardflow:password@localhost:5432/guardflow
POSTGRES_USER=guardflow
POSTGRES_PASSWORD=password
POSTGRES_DB=guardflow

# Redis
REDIS_URL=redis://localhost:6379/0

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# JWT
JWT_SECRET_KEY=your_super_secret_jwt_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# API
API_VERSION=v1
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
DEFAULT_RATE_LIMIT=100  # requests per hour
DEFAULT_DAILY_QUOTA=10000  # tokens per day
DEFAULT_MONTHLY_QUOTA=300000  # tokens per month

# Scoring
DEVIATION_THRESHOLD=2.0  # block user when score exceeds this
WARNING_THRESHOLD=1.0    # warn user when score exceeds this

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Logging
LOG_LEVEL=INFO

# Development
DEBUG=True
ENVIRONMENT=development